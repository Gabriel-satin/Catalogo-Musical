<div class="container">
  <h1>Editar Item</h1>
  <form action="/albums/update/<%= item.id %>" method="POST">
    <label for="title">Título:</label>
    <input type="text" id="title" name="title" value="<%= item.title %>" required>

    <label for="year">Ano de Lançamento:</label>
    <input type="number" id="year" name="year" value="<%= item.year %>" required>

    <label for="genre">Gênero:</label>
    <input type="text" id="genre" name="genre" value="<%= item.genre %>">

    <button type="submit">Salvar Alterações</button>
  </form>
</div>